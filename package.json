{
	"name": "graphql-api",
	"version": "1.0.0",
	"description": "This is the server-side code of my blog.",
	"main": "bin/app.js",
	"scripts": {
		"start": "node bin/app.js",
		"server:dev": "NODE_ENV=development nodemon bin/app.js --watch",
		"server:prod": "NODE_ENV=production node bin/app.js",
		"dev": "npm-run-all --parallel build:dev server:dev",
		"prod": "npm run build:prod && npm run server:prod",
		"build:dev": "webpack --watch --env development --mode development",
		"build:prod": "webpack --env production --mode production",
		"clean": "npm cache clean --force",
		"tsc": "tsc",
		"test": "jest --watchAll=false --maxWorkers=10",
		"test-lint": "npm run lint & nm run test",
		"test-watch": "jest --watch",
		"test-coverage": "jest --coverage",
		"lint": "eslint '*/**/*.{js,ts}' ",
		"pre-commit": "npm run build:dev && npm run test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AhmedElgaidi/blog-backend.git"
	},
	"author": "Ahmed Elgaidi",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/AhmedElgaidi/blog-backend/issues"
	},
	"homepage": "https://github.com/AhmedElgaidi/blog-backend#readme",
	"dependencies": {
		"@apollo/server": "^4.3.0",
		"body-parser": "^1.20.1",
		"clean-webpack-plugin": "^4.0.0",
		"cloudinary": "^1.37.0",
		"dotenv": "^6.0.0",
		"eslint": "7.4.0",
		"eslint-plugin-jest": "^27.1.7",
		"graphql": "^16.8.1",
		"graphql-middleware": "^6.1.34",
		"graphql-tools": "^8.3.14",
		"graphql-yoga": "^3.1.2",
		"joi": "^17.7.0",
		"mongoose": "^7.1.1",
		"npm-run-all": "^4.1.5",
		"reflect-metadata": "^0.1.13",
		"slugify": "^1.6.5",
		"ts-jest": "^29.0.3",
		"ts-node": "8.3.0",
		"webpack": "4.29.6"
	},
	"devDependencies": {
		"@types/debug": "0.0.31",
		"@types/dotenv": "6.1.0",
		"@types/node": "^14.0.14",
		"@typescript-eslint/eslint-plugin": "3.6.0",
		"@typescript-eslint/parser": "3.6.0",
		"@typescript-eslint/typescript-estree": "^5.59.5",
		"eslint": "7.4.0",
		"fork-ts-checker-webpack-plugin": "^6.2.6",
		"nodemon": "^2.0.20",
		"ts-loader": "^6.2.2",
		"ts-node": "8.3.0",
		"typescript": "^5.0.4",
		"webpack": "4.29.6",
		"webpack-cli": "^3.3.12",
		"webpack-node-externals": "^1.7.2"
	},
	"overrides": {
		"chokidar": "3.5.3",
		"glob-parent": "6.0.2"
	}
}
